<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.interview.crack.crackinterview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AndroidCourseActivity"
            android:label="@string/title_activity_android_course"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.interview.crack.crackinterview.MainActivity" />
        </activity>
        <activity
            android:name=".CourseViewActivity"
            android:label="@string/title_activity_course_view"
            android:parentActivityName=".AndroidCourseActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.interview.crack.crackinterview.AndroidCourseActivity" />
        </activity>
        <activity
            android:name=".InterviewListActivity"
            android:label="@string/title_activity_interview_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.interview.crack.crackinterview.MainActivity" />
        </activity>
        <activity
            android:name=".InterviewViewActivity"
            android:label="@string/title_activity_interview_view"
            android:parentActivityName=".InterviewListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.interview.crack.crackinterview.InterviewListActivity" />
        </activity>
        <activity
            android:name=".VideoListActivity"
            android:label="@string/title_activity_video_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.interview.crack.crackinterview.MainActivity" />
        </activity>
        <activity
            android:name=".VideoViewActivity"
            android:label="@string/title_activity_video_view"
            android:parentActivityName=".VideoListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.interview.crack.crackinterview.VideoListActivity" />
        </activity>
    </application>

</manifest>
